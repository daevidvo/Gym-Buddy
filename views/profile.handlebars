<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card" style="border-radius: 15px;">
        <div class="card-body p-5">
          <!-- User greeting -->
          <h2 class="text-uppercase text-center mb-5">Welcome, {{currentUser.userName}}</h2>

          <!-- Profile form -->
          <form id="profile_form">

             <!-- Username input -->
            <div class="form-outline mb-4">
              <input type="text" id="username" class="form-control form-control-lg" value="{{currentUser.userName}}">
              <label class="form-label" for="username" style="margin-left: 0px;">Username</label>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
              <input type="email" id="email" class="form-control form-control-lg" value="{{currentUser.email}}">
              <label class="form-label" for="email" style="margin-left: 0px;">Email</label>
            </div>

            <!-- Bio input -->
            <div class="form-outline mb-4">
              <input type="text" id="bio" class="form-control form-control-lg" value="{{currentUser.bio}}">
              <label class="form-label" for="bio" style="margin-left: 0px;">Bio</label>
            </div>
            
            <!-- Age input -->
            <div class="form-outline mb-4">
              <input type="number" id="age" class="form-control form-control-lg" value="{{currentUser.age}}">
              <label class="form-label" for="age" style="margin-left: 0px;">Age</label>
            </div>

             <!-- Training goals input -->
            <div class="form-outline mb-4">
              <input type="text" id="goals" class="form-control form-control-lg" value="{{currentUser.training_goals}}">
              <label class="form-label" for="goals" style="margin-left: 0px;">Training Goals</label>
            </div>

            <!-- Update profile button -->
            <div class="d-flex justify-content-center">
              <button type="submit"
                class="btn btn-success btn-block btn-lg gradient-custom-4 text-white">Update Profile</button>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Profile script -->
<script src="./js/profile.js"></script>