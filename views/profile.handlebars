<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{currentUser.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Your Profile</h3>

    <form class="form profile-form">
      <div class="form-group">
        <label for="name">Name:</label>
        <input class="form-input" type="text" id="name" name="name" value="{{currentUser.name}}" />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input class="form-input" type="email" id="email" name="email" value="{{currentUser.email}}" />
      </div>
      <div class="form-group">
        <label for="age">Age:</label>
        <input class="form-input" type="number" id="age" name="age" value="{{currentUser.age}}" />
      </div>
      <div class="form-group">
        <label for="bio">Bio:</label>
        <textarea class="form-input" id="bio" name="bio">{{currentUser.bio}}</textarea>
      </div>
      <div class="form-group">
        <label for="training-goals-signup">Training Goals:</label>
        <textarea class="form-input" id="training-goals-signup" name="training-goals-signup">{{currentUser.training_goals}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Profile</button>
      </div>
    </form>
  </div>


<script src="./js/profile.js"></script>