<div class="row">
  <div class="col-auto">
    <h2>User Profile: {{otherUser.name}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>About {{otherUser.name}}</h3>

   
    <div class="form-group">
      <label for="age">Age:</label>
      <input class="form-input" type="number" id="age" name="age" value="{{otherUser.age}}" disabled />
    </div>
    <div class="form-group">
      <label for="bio">Bio:</label>
      <textarea class="form-input" id="bio" name="bio" disabled>{{otherUser.bio}}</textarea>
    </div>
    <div class="form-group">
      <label for="training-goals-signup">Training Goals:</label>
      <textarea class="form-input" id="training-goals-signup" name="training-goals-signup" disabled>{{otherUser.training_goals}}</textarea>
    </div>
    <div class="form-group">
      <button id="like-btn" class="btn btn-primary">Like</button>
      <button id="dislike-btn" class="btn btn-secondary">Dislike</button>
    </div>
  </div>
</div>