<!-- Navbar -->
<nav class="navbar">
  <ul class="nav">
    <li class="nav-item"><a href="/">Home</a></li>
    <li class="nav-item"><a href="/profile">Profile</a></li>
    <li class="nav-item active"><a href="/matches">Matches</a></li>
  </ul>
</nav>

<!-- Matches container -->
<div class="matches-container">
  <h2>Your Matches</h2>

  {{#if matchedUsers}}
    {{#each matchedUsers}}
      <div class="matched-user">
  <a href="/messages/{{_id}}"><h3>{{name}}</h3></a>
  {{#if profilePicture}}
    <img src="{{profilePicture}}" alt="Profile Picture" />
  {{/if}}
  <p>{{bio}}</p>
  <p>Age: {{age}}</p>
  <p>Training Goals: {{training_goals}}</p>
</div>
    {{/each}}
  {{else}}
    <p>You don't have any matches yet!</p>
  {{/if}}
</div>